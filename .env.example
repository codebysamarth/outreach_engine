# =============================================================================
# Outreach Engine – environment variables
# Copy to .env and fill real values.  Defaults are shown where possible.
# =============================================================================

# ─── Postgres (matches docker-compose) ──────────────────────────────────────
POSTGRES_USER=outreach
POSTGRES_PASSWORD=changeme
POSTGRES_DB=outreach_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ─── Ollama (local LLM) ─────────────────────────────────────────────────────
OLLAMA_BASE_URL=http://localhost:11434
# Model name to pull/use.  Must be pulled first:  ollama pull mistral
OLLAMA_MODEL=mistral

# ─── ChromaDB ────────────────────────────────────────────────────────────────
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
# Collection name inside ChromaDB
CHROMADB_COLLECTION=outreach_personas

# ─── Gmail (OAuth – real send) ───────────────────────────────────────────────
# Path to the credentials.json downloaded from Google Cloud Console
GMAIL_CREDENTIALS_PATH=./credentials.json
# Path where the OAuth token cache is saved after first browser auth
GMAIL_TOKEN_PATH=./token.json

# ─── Twilio (real SMS) ───────────────────────────────────────────────────────
TWILIO_ACCOUNT_SID=AC__your_sid__
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+1xxxxxxxxxx

# ─── LinkedIn / Instagram – currently mocked ────────────────────────────────
# (put future API keys / tokens here when integrating real clients)
LINKEDIN_API_KEY=
INSTAGRAM_API_KEY=

# ─── Logging ─────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
